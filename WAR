void inicio_jogo(){
	
	char player1[100], player2[100];

	int num_aleatorio;
	
	printf("Bem-vindo ao MINI WAR.\nAperte qualquer tecla para comecar o jogo.\n");

	system("pause");
		
	printf("Player 1, digite seu username: ");
	
	scanf(" %[^\n]s", &player1);
	
	printf("Player 2, digite seu username: ");
	
	scanf(" %[^\n]s", &player2);
	
	printf("Cada pais possui uma numeracao seguido de uma letra.\nOs paises de numero 1 pertencem a %s.\nEnquanto os paises de numero 2 pertencem a %s.\nCada um de voces possuem 10 tropas adicionais.\nPosicione-as com sabedoria.\n", player1, player2);
	
	srand(time(NULL));
	
	num_aleatorio = rand() % 2;
	
	if(num_aleatorio == 0){
		
		printf("%s, eh sua vez!\n", player1);
		printf("%s, qual pais voce gostaria de atacar?\n, player1");
		
	}else if(num_aleatorio == 1){
		
		printf("%s, eh sua vez!\n", player2);
		printf("%s, qual pais voce gostaria de atacar?\n, player2");
		
	}
	
}

void nome_paises(char pais[21][4]){
		
	int k, num_aleatorio, qntd_player1 = 0, qntd_player2 = 0;
		
	char num_player[2], letra_pais[3];
	
	srand(time(NULL));
	
	for(k = 0; k < 20; k++){
		
		num_aleatorio = rand() % 2;
		
		if((num_aleatorio == 0 && qntd_player1 < 10) || qntd_player2 >= 10){
			
			strcpy(num_player, "1\0");
			
			qntd_player1++;
			
		} else if((num_aleatorio == 1 && qntd_player2 < 10) || qntd_player1 >= 10){
		
			strcpy(num_player, "2\0");
			
			qntd_player2++;
			
		} letra_pais[0] = 65 + k;
		
		letra_pais[1] = '-';
		
		letra_pais[2] = '\0';
		
		strcat(num_player, letra_pais);
		
		strcpy(pais[k], num_player);
		
		num_player[0] = '\0';
		
		letra_pais[0] = '\0';
	}
	
}

